<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="248dp"
        android:layout_height="76dp"
        android:layout_marginTop="240dp"
        android:text="PESANAN KAMU TELAH TERKIRIM"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:text="Kamu akan segera dihubungi oleh penjual melalui whatsapp yaa."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/confirm_btn_ok"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginTop="176dp"/>

    <TextView
        android:id="@+id/confirm_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HUBUNGI PENJUAL"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_btn_ok"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>